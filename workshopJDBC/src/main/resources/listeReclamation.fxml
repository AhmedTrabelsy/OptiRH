<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.ComboBox?>
<AnchorPane prefHeight="500" prefWidth="1000" style="-fx-background-color: #f4f4f4; -fx-padding: 30;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.ReclamationController">

    <AnchorPane layoutX="25.0" layoutY="42.0" prefHeight="534.0" prefWidth="296.0">
        <TextField fx:id="descriptionField" layoutX="14.0" layoutY="29.0" promptText="Description" />
        <DatePicker fx:id="dateField" layoutX="14.0" layoutY="77.0" promptText="Date" />
        <ComboBox fx:id="statusField" layoutX="14.0" layoutY="139.0" promptText="Status" />

        <TextField fx:id="utilisateurIdField" layoutX="14.0" layoutY="190.0" promptText="Utilisateur ID" />

        <Button layoutX="10.0" layoutY="250.0" onAction="#ajouterReclamation" text="Ajouter" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button layoutX="100.0" layoutY="250.0" onAction="#modifierReclamation" text="Modifier" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
        <Button layoutX="190.0" layoutY="250.0" onAction="#supprimerReclamation" text="Supprimer" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
        <Button layoutX="206.0" layoutY="51.0" mnemonicParsing="false" onAction="#clearFields" text="Clear" style="-fx-background-color: #FF9800; -fx-text-fill: white;" />
    </AnchorPane>

    <TableView fx:id="reclamationsTable" layoutX="336.0" layoutY="74.0" prefHeight="400" prefWidth="637.0">
        <columns>
            <TableColumn fx:id="idColumn" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="descriptionColumn" text="Description">
                <cellValueFactory>
                    <PropertyValueFactory property="description" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="dateColumn" text="Date">
                <cellValueFactory>
                    <PropertyValueFactory property="date" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="statusColumn" text="Status">
                <cellValueFactory>
                    <PropertyValueFactory property="status" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="utilisateurIdColumn" text="Utilisateur ID">
                <cellValueFactory>
                    <PropertyValueFactory property="utilisateurId" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

</AnchorPane>

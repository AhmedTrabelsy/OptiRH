<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #f4f4f4; -fx-padding: 30;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.ReponseController">

    <Label layoutX="14.0" layoutY="29.0" text="Description" />
    <TextArea fx:id="descriptionField" layoutX="14.0" layoutY="50.0" prefWidth="572.0" prefHeight="100.0" promptText="Description" />

    <Label layoutX="14.0" layoutY="160.0" text="Date" />
    <DatePicker fx:id="dateField" layoutX="14.0" layoutY="180.0" promptText="Date" />

    <Button layoutX="14.0" layoutY="300.0" onAction="#ajouterReponse" text="Ajouter" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    <Button layoutX="100.0" layoutY="300.0" onAction="#modifierReponse" text="Modifier" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
    <Button layoutX="190.0" layoutY="300.0" onAction="#supprimerReponse" text="Supprimer" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
    <Button layoutX="280.0" layoutY="300.0" onAction="#clearFields" text="Clear" style="-fx-background-color: #FF9800; -fx-text-fill: white;" />

    <TableView fx:id="reponsesTable" layoutX="14.0" layoutY="350.0" prefHeight="200" prefWidth="572.0">
        <columns>
            <TableColumn fx:id="idColumn" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="descriptionColumn" text="Description">
                <cellValueFactory>
                    <PropertyValueFactory property="description" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="dateColumn" text="Date">
                <cellValueFactory>
                    <PropertyValueFactory property="date" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

</AnchorPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="505.0" prefWidth="688.0" spacing="10" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.nexus.Controllers.ProjetController">
    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="75.0" prefWidth="724.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Ajouter Projet">
        <font>
            <Font name="Arial" size="16.0" />
        </font></Label>
   <HBox prefHeight="40.0" prefWidth="786.0">
      <children>
      
          <Label alignment="CENTER" prefHeight="20.0" prefWidth="206.0" text="Titre de Projet:">
              <font>
                  <Font name="Berlin Sans FB" size="16.0" />
              </font>
         </Label>
          <TextField fx:id="typeProjetField" prefHeight="29.0" prefWidth="324.0" />
      </children>
   </HBox>

    <Label alignment="CENTER" prefHeight="20.0" prefWidth="204.0" text="Description du Projet:">
        <font>
            <Font name="Berlin Sans FB" size="16.0" />
        </font></Label>
    <TextField fx:id="descriptionProjetField" prefHeight="66.0" prefWidth="764.0" />
    <HBox prefHeight="42.0" prefWidth="663.0">
        <children>

            <Label prefHeight="47.0" prefWidth="158.0" text="Statut du Projet:">
                <font>
                    <Font name="Berlin Sans FB" size="16.0" />
                </font>
            </Label>
            <ComboBox fx:id="statusProjetComboBox" prefHeight="38.0" prefWidth="210.0" promptText="Sélectionnez un statut" />
        </children>
    </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
      
                      <Label alignment="CENTER" prefHeight="20.0" prefWidth="241.0" text="ID Utilisateur:">
              <font>
                  <Font name="Berlin Sans FB" size="16.0" />
              </font>
         </Label>
          <TextField fx:id="utilisateurIdField" prefHeight="30.0" prefWidth="106.0" />
      </children>
   </HBox>

    <Label text="Ajouter une Mission:">
        <font>
            <Font name="Berlin Sans FB" size="16.0" />
        </font></Label>
    <HBox spacing="10">
        <TextField fx:id="titreMissionField" prefHeight="41.0" prefWidth="172.0" promptText="Titre de la Mission" />
        <TextField fx:id="descriptionMissionField" prefHeight="39.0" prefWidth="172.0" promptText="Description" />
        <ComboBox fx:id="statutMissionComboBox" prefHeight="38.0" prefWidth="206.0" promptText="Sélectionnez un statut" />
        <CheckBox fx:id="isPresentCheckBox" prefHeight="26.0" prefWidth="83.0" text="Présent" />
        <Button onAction="#ajouterMission" prefHeight="36.0" prefWidth="105.0" text="Ajouter Mission">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font></Button>
    </HBox>

    <Label text="Missions:">
        <font>
            <Font name="Berlin Sans FB" size="16.0" />
        </font></Label>
    <ListView fx:id="missionsListView" prefHeight="210.0" prefWidth="688.0" />
    <HBox alignment="CENTER" prefHeight="112.0" prefWidth="688.0">
        <children>

            <Button onAction="#enregistrerProjet" prefHeight="0.0" prefWidth="281.0" text="Enregistrer Projet" />
        </children>
    </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.paint.Color?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.nexus.Controllers.GestionReservationController" spacing="20" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Titre de la fenêtre -->
    <Label text="Gestion des Réservations" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Champ ID (non modifiable pour la modification) -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="ID :"/>
        <TextField fx:id="idField" promptText="ID" editable="false"/>
    </HBox>

    <!-- Champ Disponibilité -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Disponibilité :"/>
        <ComboBox fx:id="disponibiliteCombo" promptText="Sélectionner la disponibilité"/>
    </HBox>

    <!-- Champ ID de l'Utilisateur -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="ID de l'Utilisateur :"/>
        <TextField fx:id="userIdField" promptText="Entrez l'ID de l'utilisateur"/>
    </HBox>

    <!-- Message d'erreur -->
    <Label fx:id="errorMessage" textFill="red" visible="false"/>

    <!-- Boutons -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Ajouter" onAction="#handleAjouterReservation"/>
        <Button text="Modifier" onAction="#handleModifierReservation"/>
        <Button text="Supprimer" onAction="#handleSupprimerReservation"/>
        <Button text="Annuler" onAction="#handleAnnuler"/>
    </HBox>

    <!-- Tableau pour afficher la liste des réservations -->
    <TableView fx:id="reservationTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Disponibilité" fx:id="disponibiliteColumn"/>
            <TableColumn text="ID Utilisateur" fx:id="userIdColumn"/>
            <TableColumn text="Nom de l'Utilisateur" fx:id="userNameColumn"/> <!-- Nouvelle colonne -->
        </columns>
    </TableView>
</VBox>

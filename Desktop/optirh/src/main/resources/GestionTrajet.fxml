<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.paint.Color?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.nexus.Controllers.GestionTrajetController" spacing="20" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Titre de la fenêtre -->
    <Label text="Gestion des Trajets" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Champ ID (non modifiable pour la modification) -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="ID :"/>
        <TextField fx:id="idField" promptText="ID" editable="False"/>
    </HBox>

    <!-- Champ Disponibilité -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Disponibilité :"/>
        <ComboBox fx:id="disponibiliteCombo" promptText="Sélectionner la disponibilité">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Disponible"/>
                    <String fx:value="Indisponible"/>
                </FXCollections>
            </items>
        </ComboBox>
    </HBox>

    <!-- Champ Type -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Type :"/>
        <TextField fx:id="typeField" promptText="Entrez le type de trajet"/>
    </HBox>

    <!-- Champ Station -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Station :"/>
        <TextField fx:id="stationField" promptText="Entrez la station"/>
    </HBox>

    <!-- Message d'erreur -->
    <Label fx:id="errorMessage" textFill="red" visible="false"/>

    <!-- Boutons -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Ajouter" onAction="#handleAjouterTrajet"/>
        <Button text="Modifier" onAction="#handleModifierTrajet"/>
        <Button text="Supprimer" onAction="#handleSupprimerTrajet"/>
        <Button text="Annuler" onAction="#handleAnnuler"/>
        <!-- Nouveau bouton pour ouvrir la gestion des véhicules -->
        <Button text="Gestion des Véhicules" onAction="#handleOpenGestionVehicule"/>

    </HBox>

    <!-- Tableau pour afficher la liste des trajets -->
    <TableView fx:id="trajetTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Disponibilité" fx:id="disponibiliteColumn"/>
            <TableColumn text="Type" fx:id="typeColumn"/>
            <TableColumn text="Station" fx:id="stationColumn"/>
        </columns>
    </TableView>


</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500" prefWidth="1000" style="-fx-background-color: #f4f4f4; -fx-padding: 30;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.nexus.Controllers.ListeEvenementController">

    <!-- Barre d'outils avec les champs et boutons -->
    <AnchorPane layoutX="25.0" layoutY="42.0" prefHeight="534.0" prefWidth="296.0">
        <TextField fx:id="titreField" layoutX="14.0" layoutY="29.0" promptText="Titre" />
        <TextField fx:id="lieuField" layoutX="14.0" layoutY="77.0" promptText="Lieu" />
        <TextField fx:id="descriptionField" layoutX="14.0" layoutY="139.0" promptText="Description" />
        <TextField fx:id="prixField" layoutX="14.0" layoutY="190.0" promptText="Prix" />
        <DatePicker fx:id="dateDebutField" layoutX="14.0" layoutY="241.0" promptText="Date Début" />
        <DatePicker fx:id="dateFinField" layoutX="14.0" layoutY="292.0" promptText="Date Fin" />
        <TextField fx:id="heureField" layoutX="14.0" layoutY="350.0" promptText="Heure" />
        <Button layoutX="10.0" layoutY="481.0" onAction="#ajouterEvenement" text="Ajouter" />
        <Button layoutX="189.0" layoutY="481.0" onAction="#modifierEvenement" text="Modifier" />
        <Button layoutX="89.0" layoutY="481.0" onAction="#supprimerEvenement" text="Supprimer" />
        <TextField fx:id="imageField" layoutX="14.0" layoutY="407.0" promptText="Image" />
      <Label layoutX="17.0" layoutY="6.0" prefHeight="18.0" prefWidth="42.0" text="Titre:" />
      <Label layoutX="17.0" layoutY="55.0" text="Lieux:" />
      <Label layoutX="17.0" layoutY="111.0" text="Description:" />
      <Label layoutX="17.0" layoutY="165.0" text="Prix:" />
      <Label layoutX="17.0" layoutY="216.0" text="Date Debut :" />
      <Label layoutX="17.0" layoutY="267.0" text="Date Fin:" />
      <Label layoutX="17.0" layoutY="324.0" text="Heure:" />
      <Label layoutX="17.0" layoutY="383.0" text="Image :" />
      <Button layoutX="206.0" layoutY="51.0" mnemonicParsing="false" onAction="#clearFields" text="Clear" />
        <Button fx:id="imageButton" layoutX="193.0" layoutY="407.0" onAction="#choisirImage" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8;" text="Choisir" />

    </AnchorPane>

       <!-- TableView pour afficher la liste des événements -->
    <TableView fx:id="eventsTable" layoutX="336.0" layoutY="74.0" prefHeight="400" prefWidth="637.0">
        <columns>
         <TableColumn fx:id="idColumn" prefWidth="27.20001220703125" text="ID">
            <cellValueFactory>
               <PropertyValueFactory property="titre" />
            </cellValueFactory>
         </TableColumn>

               <!-- Colonne pour le titre de l'événement -->
            <TableColumn fx:id="titleColumn" prefWidth="83.20001220703125" text="Titre">
                <cellValueFactory>
                    <PropertyValueFactory property="titre" />
                </cellValueFactory>
            </TableColumn>

               <!-- Colonne pour le lieu de l'événement -->
            <TableColumn fx:id="locationColumn" prefWidth="68.79998779296875" text="Lieu">
                <cellValueFactory>
                    <PropertyValueFactory property="lieu" />
                </cellValueFactory>
            </TableColumn>

               <!-- Colonne pour la description de l'événement -->
            <TableColumn fx:id="descriptionColumn" prefWidth="119.20001220703125" text="Description">
                <cellValueFactory>
                    <PropertyValueFactory property="description" />
                </cellValueFactory>
            </TableColumn>

               <!-- Colonne pour le prix de l'événement -->
            <TableColumn fx:id="priceColumn" prefWidth="46.39996337890625" text="Prix">
                <cellValueFactory>
                    <PropertyValueFactory property="prix" />
                </cellValueFactory>
            </TableColumn>

               <!-- Colonne pour la date de début -->
            <TableColumn fx:id="startDateColumn" prefWidth="79.20001220703125" text="Date Début">
                <cellValueFactory>
                    <PropertyValueFactory property="dateDebut" />
                </cellValueFactory>
            </TableColumn>

               <!-- Colonne pour la date de fin -->
            <TableColumn fx:id="endDateColumn" prefWidth="77.5999755859375" text="Date Fin">
                <cellValueFactory>
                    <PropertyValueFactory property="dateFin" />
                </cellValueFactory>
            </TableColumn>

               <!-- Colonne pour l'image de l'événement -->
            <TableColumn fx:id="imageColumn" prefWidth="64.0001220703125" text="Image">
                <cellValueFactory>
                    <PropertyValueFactory property="image" />
                </cellValueFactory>
            </TableColumn>

               <!-- Colonne pour l'heure de l'événement -->
            <TableColumn fx:id="timeColumn" prefWidth="73.5999755859375" text="Heure">
                <cellValueFactory>
                    <PropertyValueFactory property="heure" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

</AnchorPane>

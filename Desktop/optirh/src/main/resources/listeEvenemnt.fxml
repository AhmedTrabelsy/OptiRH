<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="476.0" prefWidth="1406.0" style="-fx-background-color: #f4f4f4; -fx-padding: 30;" stylesheets="@/styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.nexus.Controllers.ListeEvenementController">
    <!-- Titre Centré -->
    <Label layoutX="450.0" layoutY="20.0" prefHeight="50.0" prefWidth="529.0" style="-fx-text-fill: #333;" text="📅 Liste des Événements">
        <font>
            <Font name="Arial Black" size="30.0" />
        </font>
    </Label>
    <TextField fx:id="searchField" layoutX="219.0" layoutY="57.0" promptText="Rechercher un événement..." />

    <!-- Table des événements -->
    <TableView fx:id="eventsTable" layoutX="78.0" layoutY="110.0" prefHeight="310.0" prefWidth="1054.0" style="-fx-background-color: white; -fx-border-radius: 8px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 4);">
        <columns>
            <TableColumn fx:id="titleColumn" prefWidth="89.59997940063477" text="📌 Titre">
                <cellValueFactory>
                    <PropertyValueFactory property="titre" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="locationColumn" prefWidth="99.20001220703125" text="📍 Lieu">
                <cellValueFactory>
                    <PropertyValueFactory property="lieu" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="descriptionColumn" prefWidth="132.80003356933594" text="📝 Description">
                <cellValueFactory>
                    <PropertyValueFactory property="description" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="priceColumn" prefWidth="104.79998779296875" text="💰 Prix">
                <cellValueFactory>
                    <PropertyValueFactory property="prix" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="startDateColumn" prefWidth="101.5999755859375" text="📅 Début">
                <cellValueFactory>
                    <PropertyValueFactory property="dateDebut" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="endDateColumn" prefWidth="53.60003662109375" text="⏳ Fin">
                <cellValueFactory>
                    <PropertyValueFactory property="dateFin" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="imageColumn" prefWidth="88.79998779296875" text="🖼️ Image">
                <cellValueFactory>
                    <PropertyValueFactory property="image" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="timeColumn" prefWidth="92.79998779296875" text="⏰ Heure">
                <cellValueFactory>
                    <PropertyValueFactory property="heure" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="actionColumn" prefWidth="287.9999755859376" text="⚙️ Actions" />
        </columns>
    </TableView>

    <!-- Bouton Ajouter Événement -->
    <Button fx:id="Ajouter_Evenement" layoutX="50" layoutY="450" onAction="#ouvrirFenetreAjout" styleClass="btn-ajouter" text="➕ Ajouter Événement" />
   <Text layoutX="87.0" layoutY="74.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Rechercher Par Titre :" wrappingWidth="143.09494018554688" />

</AnchorPane>

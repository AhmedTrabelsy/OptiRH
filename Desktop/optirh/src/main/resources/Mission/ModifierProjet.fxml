<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@dashboard.css" fx:controller="tn.nexus.Controllers.Mission.ModifierProjetController">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <Label text="Modifier un projet" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TextField fx:id="nomField" promptText="Nom du projet" styleClass="custom-text-field"/>
    <TextArea fx:id="descriptionField" promptText="Description du projet" wrapText="true" styleClass="custom-text-field"/>
    <Button text="Enregistrer" onAction="#handleSave" styleClass="btn-ajouter"/>
</VBox>
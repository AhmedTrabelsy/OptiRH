<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="320.0" prefWidth="420.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.nexus.Controllers.ReservationEditController">

    <!-- Titre de la fenêtre -->
    <Label layoutX="100.0" layoutY="20.0" text="✏️ Modifier Réservation"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Labels et champs de texte -->
    <Label layoutX="50.0" layoutY="60.0" text="Nom :" />
    <TextField fx:id="nomField" editable="false" layoutX="150.0" layoutY="55.0" prefWidth="220.0"
               style="-fx-background-color: #f5f5f5; -fx-border-radius: 5px;" />

    <Label layoutX="50.0" layoutY="100.0" text="Prénom :" />
    <TextField fx:id="prenomField" layoutX="150.0" layoutY="95.0" prefWidth="220.0"
               style="-fx-border-radius: 5px;" />

    <Label layoutX="50.0" layoutY="140.0" text="Téléphone :" />
    <TextField fx:id="telephoneField" layoutX="150.0" layoutY="135.0" prefWidth="220.0"
               style="-fx-border-radius: 5px;" />

    <Label layoutX="50.0" layoutY="180.0" text="Email :" />
    <TextField fx:id="emailField" editable="false" layoutX="150.0" layoutY="175.0" prefWidth="220.0"
               style="-fx-background-color: #f5f5f5; -fx-border-radius: 5px;" />

    <!-- Boutons -->
    <Button layoutX="150.0" layoutY="230.0" onAction="#handleSaveAction"
            style="-fx-background-color: #007b8f; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"
            text="💾 Sauvegarder" />

    <Button fx:id="annuler" layoutX="270.0" layoutY="230.0" onAction="#annuler"
            style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"
            text="❌ Annuler" />

</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="476.0" prefWidth="1406.0" style="-fx-background-color: #f4f4f4; -fx-padding: 30;" stylesheets="@/Evenement/styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.nexus.Controllers.Evenement.ListeEvenementController">
    <left>
        <AnchorPane fx:id="sideBar" prefHeight="200.0" prefWidth="200.0" styleClass="menu" BorderPane.alignment="CENTER" />
    </left>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <!-- Titre -->
            <Label text="📅 Liste des Événements" style="-fx-text-fill: #333;">
                <font>
                    <Font name="Arial Black" size="30.0" />
                </font>
            </Label>

            <!-- Champ de recherche -->
            <TextField fx:id="searchField" promptText="Rechercher un événement..." />

            <!-- Table des événements -->
            <TableView fx:id="eventsTable" prefHeight="310.0" prefWidth="1270.0" style="-fx-background-color: white; -fx-border-radius: 8px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 4);">
                <columns>
                    <TableColumn fx:id="titleColumn" prefWidth="120" text="📌 Titre">
                        <cellValueFactory>
                            <PropertyValueFactory property="titre" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="locationColumn" prefWidth="120" text="📍 Lieu">
                        <cellValueFactory>
                            <PropertyValueFactory property="lieu" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="descriptionColumn" prefWidth="150" text="📝 Description">
                        <cellValueFactory>
                            <PropertyValueFactory property="description" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="priceColumn" prefWidth="100" text="💰 Prix">
                        <cellValueFactory>
                            <PropertyValueFactory property="prix" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="startDateColumn" prefWidth="100" text="📅 Début">
                        <cellValueFactory>
                            <PropertyValueFactory property="dateDebut" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="endDateColumn" prefWidth="100" text="⏳ Fin">
                        <cellValueFactory>
                            <PropertyValueFactory property="dateFin" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="imageColumn" prefWidth="100" text="🖼️ Image">
                        <cellValueFactory>
                            <PropertyValueFactory property="image" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="timeColumn" prefWidth="100" text="⏰ Heure">
                        <cellValueFactory>
                            <PropertyValueFactory property="heure" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="longitudeColumn" prefWidth="100" text="🌍 Longitude" />
                    <TableColumn fx:id="latitudeColumn" prefWidth="100" text="📍 Latitude" />
                    <TableColumn fx:id="statusColumn" prefWidth="100" text="🔄 Status" />
                    <TableColumn fx:id="actionColumn" prefWidth="150" text="⚙️ Actions" />
                </columns>
            </TableView>

            <!-- Bouton Ajouter Événement -->
            <Button fx:id="Ajouter_Evenement" onAction="#ouvrirFenetreAjout" styleClass="btn-ajouter" text="➕ Ajouter Événement" />
        </VBox>
    </center>
</BorderPane>

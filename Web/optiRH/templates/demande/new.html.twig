{% extends 'front-base.html.twig' %}

{% block title %}Postuler à {{ offre.poste }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .job-meta-item i {
            color: #ffffff;
        }
        .job-meta {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }
        .job-meta-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #ffffff;
        }
        .application-card {
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            margin-top: -80px;
            position: relative;
            z-index: 1;
        }
        .form-section {
            margin-bottom: 30px;
        }
        .form-section h4 {
            border-bottom: 2px solid #f5f5f5;
            padding-bottom: 10px;
            margin-bottom: 20px;
            color: #3ab5ce;
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
        /* Correction spécifique pour le sélecteur de date */
        input[type="date"] {
            -webkit-appearance: none;
            min-height: 45px;
            padding: 0.375rem 0.75rem;
        }

        /* Alignement vertical des labels */
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        /* Espacement entre les champs */
        .form-group {
            margin-bottom: 1.5rem;
        }
        .custom-file-upload {
            position: relative;
            display: block;
        }
        /* Ajout du padding pour le message des formats */
        .file-help {
            padding-top: 10px;
            display: block;
        }
        .custom-file-label {
            background: #8b92dd;
            color: white !important;
            padding: 12px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
            display: inline-flex;
            align-items: center;
        }

        .custom-file-label:hover {
            background: #7a81cc;
        }

        .file-name {

            margin-left: 15px;
            color: #3ab5ce;
            font-weight: 500;
            font-style: normal;
        }

        .custom-file-input:focus + .custom-file-label {
            box-shadow: 0 0 0 0.2rem rgba(139, 146, 221, 0.25);
        }
    </style>
{% endblock %}

{% block slider %}
    <!-- Hero Area Start -->
    <div class="slider-area">
        <div class="single-slider section-overly slider-height2 d-flex align-items-center hero-solid" data-background="{{ asset('img-front/hero/about.jpg') }}">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>{{ offre.poste }}</h2>
                            <div class="job-meta justify-content-center">
                                <div class="job-meta-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    {{ offre.localisation }}
                                </div>
                                <div class="job-meta-item">
                                    <i class="fas fa-briefcase"></i>
                                    {{ offre.typeContrat }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero Area End -->
{% endblock %}

{% block body %}
    <div class="job-listing-area pt-120 pb-120">
        <div class="container">
            <div class="application-card">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }} alert-dismissible fade show">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="form-section">
                    <h4>Informations personnelles</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.nomComplet, {
                                    'attr': {'class': 'form-control form-control-lg'}
                                }) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.email, {
                                    'attr': {'class': 'form-control form-control-lg'}
                                }) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.telephone, {
                                    'attr': {'class': 'form-control form-control-lg'}
                                }) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.adresse, {
                                    'attr': {'class': 'form-control form-control-lg'}
                                }) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h4>Disponibilités</h4>
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.dateDebutDisponible, {
                                    'attr': {
                                        'class': 'form-control form-control-lg',
                                    },
                                    'label': 'Date de disponibilité '
                                }) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.situationActuelle, {
                                    'attr': {
                                        'class': 'form-control form-control-lg',
                                        'placeholder': 'Choisir une situation'
                                    },
                                    'label': 'Situation actuelle'
                                }) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-section">
                    <h4>Détails de la candidature</h4>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                {{ form_row(form.description, {
                                    'attr': {'class': 'form-control form-control-lg', 'rows': 4}
                                }) }}
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="custom-file-upload">
                                    {{ form_widget(form.fichierPieceJointe, {
                                        'attr': {
                                            'class': 'custom-file-input',
                                            'hidden': 'hidden',
                                            'onchange': 'updateFileName(this)'
                                        }
                                    }) }}
                                    <label class="custom-file-label" for="{{ form.fichierPieceJointe.vars.id }}">
                                        <i class="fas fa-file-upload mr-2"></i>Parcourir les fichiers
                                    </label>
                                    <span class="file-name"></span>
                                    <small class="form-text text-muted file-help">
                                        Formats acceptés : PDF, JPG, PNG (max 5Mo)
                                    </small>
                                </div>
                            </div>
                        </div>                    </div>
                </div>

                <div class="text-right mt-5">
                    <button type="submit" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-paper-plane mr-2"></i>Soumettre ma candidature
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <script>
        function updateFileName(input) {
            const container = input.closest('.custom-file-upload');
            const fileName = input.files[0]?.name || 'Aucun fichier sélectionné';
            const label = container.querySelector('.custom-file-label');

            // Mise à jour de l'affichage
            container.querySelector('.file-name').textContent = fileName;

            // Changement visuel du label après sélection
            if (input.files[0]) {
                label.innerHTML = '<i class="fas fa-check-circle mr-2"></i>Fichier sélectionné';
                label.style.backgroundColor = '#3ab5ce'; /* Vert de confirmation */
            }
        }
    </script>
{% endblock %}
{% extends 'partials/layout-vertical.html.twig' %}

{% block title %}Rapport du projet - {{ project.nom }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="h4 mb-0 text-primary">
                            <i class="ri-file-text-line me-2"></i>Rapport d'analyse du projet
                        </h2>
                        <a href="{{ path('gs-projet_project_show', {'id': project.id}) }}" 
                           class="btn btn-sm btn-outline-primary">
                            <i class="ri-arrow-left-line me-1"></i>Retour
                        </a>
                    </div>
                <div class="mt-4">
    {% if report is iterable %}
        <pre>{{ dump(report) }}</pre>
        {# Ou pour un affichage plus propre #}
        {# {% include 'gs-projet/project/_report_data.html.twig' with {'data': report} %} #}
    {% else %}
        {{ report|raw }}
    {% endif %}
</div>
                    
                    <div class="mt-4 d-flex justify-content-end">
                        <button onclick="window.print()" class="btn btn-primary">
                            <i class="ri-printer-line me-1"></i>Imprimer le rapport
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
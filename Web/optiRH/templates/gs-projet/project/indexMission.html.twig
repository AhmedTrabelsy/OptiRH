{% extends 'partials/layout-horizontal.html.twig' %}

{% block title %}Calendrier des Missions{% endblock %}

{% block css %}
<!-- Plugin css -->
<link href="/libs/fullcalendar/main.min.css" rel="stylesheet" type="text/css"/>
<style>
    .fc-event {
        cursor: pointer;
        transition: transform 0.2s;
    }
    .fc-event:hover {
        transform: translateY(-2px);
    }
</style>
{% endblock %}

{% block topbar %}
    {{ include('partials/topbar.html.twig', { page_title: 'Calendrier des Missions' }) }}
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="row g-4">
            <!-- Partie latérale avec les légendes -->
            <div class="col-lg-3">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary bg-opacity-10">
                        <h5 class="card-title mb-0">Légende des Statuts</h5>
                    </div>
                    <div class="card-body p-2">
                        <div class="list-group list-group-flush">
                            <div class="list-group-item d-flex align-items-center py-2">
                                <div class="badge bg-success rounded-pill me-3" style="width: 24px; height: 24px;"></div>
                                <span class="small">Terminé</span>
                            </div>
                            <div class="list-group-item d-flex align-items-center py-2">
                                <div class="badge bg-warning rounded-pill me-3" style="width: 24px; height: 24px;"></div>
                                <span class="small">En Cours</span>
                            </div>
                            <div class="list-group-item d-flex align-items-center py-2">
                                <div class="badge bg-danger rounded-pill me-3" style="width: 24px; height: 24px;"></div>
                                <span class="small">À Faire</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Calendrier -->
            <div class="col-lg-9">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div id="calendar"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="statusModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Modifier le statut</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="statusForm">
                <div class="modal-body">
                    <input type="hidden" id="missionId">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Statut de la mission</label>
                        <select class="form-select form-select-lg" id="statusSelect" name="status">
                            <option value="To Do">À faire</option>
                            <option value="In Progress">En cours</option>
                            <option value="Done">Terminé</option>
                        </select>
                    </div>
                    <input type="hidden" name="_token" value="{{ csrf_token('mission_status') }}">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Sauvegarder
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{# Modification dans la configuration des événements (suppression du contenu personnalisé inutile) #}
{% block javascript %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const calendarEl = document.getElementById('calendar');
    const modal = new bootstrap.Modal('#statusModal');
    let currentEvent = null;

    const calendar = new FullCalendar.Calendar(calendarEl,  {
        // ... autres configurations ...
        events: {{ missions|json_encode|raw }},
        eventDidMount: function(info) {
            const status = info.event.extendedProps.statut;
            let color = '#6c757d';
            let textColor = 'white';

            switch(status) {
                case 'Done':
                    color = '#28a745';
                    break;
                case 'In Progress':
                    color = '#ffc107';
                    textColor = 'black';
                    break;
                case 'To Do':
                    color = '#dc3545';
                    break;
            }

            info.el.style.backgroundColor = color;
            info.el.style.borderColor = color;
            info.el.style.color = textColor;
            info.el.style.fontWeight = '500';
        },
        eventContent: function(arg) {
            // Correction ici pour utiliser title au lieu de extendedProps.titre
            return {
                html: `<div class="fc-event-title p-2">${arg.event.title}</div>`
            };
        },
        eventClick: function(info) {
            currentEvent = info.event;
            document.getElementById('missionId').value = info.event.id;
            document.getElementById('statusSelect').value = info.event.extendedProps.statut;
            modal.show();
        }
    });

    calendar.render();

   
    // Modification de la gestion de la soumission
    document.getElementById('statusForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const missionId = document.getElementById('missionId').value;

        fetch(`/gs-projet/project/missions/${missionId}/update-status`, {
            method: 'POST',
            body: formData
        })
        .then(response => {
            if (!response.ok) throw new Error('Erreur réseau');
            return response.json();
        })
        .then(data => {
            if (data.success) {
                // Fermeture de la modal
                modal.hide();
                
                // Rafraîchissement complet du calendrier
                calendar.refetchEvents();
                
                // Redirection vers la page index après 1 seconde
                setTimeout(() => {
                    window.location.href = "{{ path('gs-projet_project_app_missions_index') }}";
                }, 1000);

                Toastify({
                    text: "Statut mis à jour ! Redirection...",
                    duration: 1000,
                    backgroundColor: "#28a745",
                }).showToast();
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Toastify({
                text: "Échec de la mise à jour !",
                backgroundColor: "#dc3545",
            }).showToast();
        });
    });
});
</script>

<!-- Bibliothèques nécessaires -->
<script src="/libs/moment/min/moment.min.js"></script>
<script src="/libs/fullcalendar/main.min.js"></script>
<script src="/libs/fullcalendar/locales/fr.js"></script>
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
{% endblock %}
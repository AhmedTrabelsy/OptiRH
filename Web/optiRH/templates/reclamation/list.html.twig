{# templates/reclamation/list.html.twig #}
{% extends 'partials/layout-vertical.html.twig' %}

{% block title %}Liste des r√©clamations ‚Ä¢ OPTIRH{% endblock %}

{% block topbar %}
    {{ include('partials/topbar.html.twig', { page_title: 'Liste des r√©clamations ‚Ä¢ OPTIRH' }) }}
{% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <style>
        /* Th√®me OPTIRH - Bleu ciel */
        :root {
            --optirh-blue: #4da6ff;
            --optirh-dark-blue: #3399ff;
            --optirh-light-blue: #e6f2ff;
            --success-color: #2ecc71;
            --warning-color: #f39c12;
            --danger-color: #e74c3c;
            --light-color: #f8f9fa;
            --dark-color: #2c3e50;
        }

        /* ... (autres styles CSS existants) ... */

        /* Styles pour les statuts */
        .status-select {
            width: 160px;
            border-radius: 8px;
            padding: 6px 12px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 3px 8px rgba(0,0,0,0.08);
            border: 1px solid rgba(0,0,0,0.1);
        }

        .status-select.status-en-attente {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-select.status-en-cours {
            background-color: #d1ecf1;
            color: #0c5460;
        }

        .status-select.status-resolue {
            background-color: #d4edda;
            color: #155724;
        }

        /* Affichage des sentiments */
        .sentiment-display {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 6px 12px;
            border-radius: 20px;
            background-color: white;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        }

        .sentiment-bubble {
            display: inline-block;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            box-shadow: 0 2px 3px rgba(0,0,0,0.1);
        }

        .sentiment-bubble.positive { background-color: var(--success-color); }
        .sentiment-bubble.neutral { background-color: var(--warning-color); }
        .sentiment-bubble.negative { background-color: var(--danger-color); }
        .sentiment-bubble.unknown { background-color: #95a5a6; }

        .sentiment-label {
            font-size: 0.85rem;
            font-weight: 600;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid animate__animated animate__fadeIn">
    <div class="card mb-4">
        <div class="card-header d-flex flex-wrap justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-white">Gestion des r√©clamations <span class="text-light">OPTIRH</span></h6>
            <div class="header-actions d-flex gap-2">
                <a href="{{ path('admin_reclamations_pdf') }}" class="btn btn-sm btn-success">
                    <i class="fas fa-file-pdf me-1"></i> Exporter PDF
                </a>
                <a href="{{ path('admin_reclamations_archive') }}" class="btn btn-sm btn-light">
                    <i class="fas fa-archive me-1"></i> Historique
                </a>
            </div>
        </div>
        
        <div class="card-body">
            <form method="get" class="search-filter-form mb-4 animate__animated animate__fadeInUp">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-white"><i class="fas fa-search text-muted"></i></span>
                            <input type="text" name="search" class="form-control border-start-0" 
                                   placeholder="Rechercher..." value="{{ searchTerm }}">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <select name="type" class="form-select">
                            <option value="">Tous les types</option>
                            {% for typeValue, typeLabel in typeChoices %}
                                <option value="{{ typeValue }}" {% if selectedType == typeValue %}selected{% endif %}>
                                    {{ typeLabel }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary w-100 btn-filter">
                            <i class="fas fa-filter me-1"></i> Filtrer
                        </button>
                    </div>
                </div>
            </form>
            
            <div class="table-responsive">
                <table class="table table-reclamations">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Utilisateur</th>
                            <th>Date</th>
                            <th>Statut</th>
                            <th>Sentiment</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reclamation in pagination %}
                            <tr class="animate__animated animate__fadeIn" style="animation-delay: {{ loop.index * 0.05 }}s">
                                <td>
                                    <div class="d-flex align-items-center">
                                        {% if reclamation.type == "Technique" %}üõ†Ô∏è
                                        {% elseif reclamation.type == "Administrative" %}üìã
                                        {% elseif reclamation.type == "Service" %}ü§ù
                                        {% else %}üìå{% endif %}
                                        <span class="ms-2">{{ reclamation.type }}</span>
                                    </div>
                                </td>
                                <td title="{{ reclamation.description }}">
                                    {{ reclamation.description|slice(0, 50) }}
                                    {% if reclamation.description|length > 50 %}...{% endif %}
                                </td>
                                <td>{{ reclamation.utilisateur.nom }}</td>
                                <td>{{ reclamation.date|date('d/m/Y H:i') }}</td>
                                <td>
                                    <form method="post" action="{{ path('admin_update_status', {'id': reclamation.id}) }}">
                                        {% set status_class = 'status-' ~ reclamation.status|lower|replace({' ': '-', '√©': 'e'}) %}
                                        <select name="status" class="status-select {{ status_class }}" onchange="this.form.submit()">
                                            <option value="En attente" {% if reclamation.status == 'En attente' %}selected{% endif %}>‚è≥ En attente</option>
                                            <option value="En cours" {% if reclamation.status == 'En cours' %}selected{% endif %}>üîÑ En cours</option>
                                            <option value="R√©solue" {% if reclamation.status == 'R√©solue' %}selected{% endif %}>‚úÖ R√©solue</option>
                                        </select>
                                    </form>
                                </td>
                                <td>
                                    <div class="sentiment-display">
                                        {% if reclamation.sentimentLabel %}
                                            {% set sentiment_type = reclamation.sentimentLabel %}
                                            <span class="sentiment-bubble {{ sentiment_type }}"></span>
                                            <span class="sentiment-label">
                                                {% if sentiment_type == 'positive' %}üòä Positif
                                                {% elseif sentiment_type == 'neutral' %}üòê Neutre
                                                {% elseif sentiment_type == 'negative' %}üò† N√©gatif{% endif %}
                                            </span>
                                            <span class="text-muted small ms-2">{{ reclamation.sentimentScore|number_format(2) }}</span>
                                        {% else %}
                                            <span class="sentiment-bubble unknown"></span>
                                            <span class="sentiment-label">ü§î Non analys√©</span>
                                        {% endif %}
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="{{ path('admin_reclamation_reponses', {'id': reclamation.id}) }}" 
                                           class="btn btn-sm btn-primary"
                                           title="Voir les r√©ponses">
                                            <i class="fas fa-comments"></i>
                                        </a>
                                        <a href="{{ path('admin_reclamation_qr_code', {'id': reclamation.id}) }}" 
                                           class="btn btn-sm btn-info"
                                           title="QR Code">
                                            <i class="fas fa-qrcode"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">
                                    <div class="empty-state text-center py-4">
                                        <i class="fas fa-inbox fa-3x mb-3 text-muted"></i>
                                        <h4 class="mb-3">Aucune r√©clamation trouv√©e</h4>
                                        <p class="text-muted">Aucune r√©clamation ne correspond √† vos crit√®res de recherche</p>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                
                <div class="pagination-container mt-4">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation des √©l√©ments au chargement
            const cards = document.querySelectorAll('.card, .table-responsive');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.animation = `fadeInUp 0.5s ease forwards ${index * 0.1}s`;
            });

            // Tooltips
            $('[title]').tooltip({
                trigger: 'hover',
                placement: 'top',
                animation: true
            });
        });
    </script>
{% endblock %}
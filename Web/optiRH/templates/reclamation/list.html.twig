{% extends 'partials/layout-vertical.html.twig' %}

{% block title %}Liste des réclamations{% endblock %}

{% block topbar %}
    {{ include('partials/topbar.html.twig', { page_title: 'Liste des réclamations' }) }}
{% endblock %}

{% block stylesheets %}
    <style>
        .status-select {
            width: 150px;
            border-radius: 4px;
            padding: 5px;
        }
        .status-pending { background-color: #fff3cd; }
        .status-in-progress { background-color: #d1ecf1; }
        .status-resolved { background-color: #d4edda; }

        /* Nouveau CSS pour les indicateurs de sentiment */
        .sentiment-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 5px;
        }
        .sentiment-positive {
            background-color: #28a745;
        }
        .sentiment-neutral {
            background-color: #ffc107;
        }
        .sentiment-negative {
            background-color: #dc3545;
        }
        .sentiment-unknown {
            background-color: #6c757d;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Utilisateur</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th>Sentiment</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reclamation in reclamations %}
                                <tr>
                                    <td>{{ reclamation.type }}</td>
                                    <td>{{ reclamation.description|slice(0, 50) }}{% if reclamation.description|length > 50 %}...{% endif %}</td>
                                    <td>{{ reclamation.utilisateur.nom }}</td>
                                    <td>{{ reclamation.date|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <form method="post" action="{{ path('admin_update_status', {'id': reclamation.id}) }}">
                                            <select name="status" class="status-select status-{{ reclamation.status|lower|replace({' ': '-'}) }}"
                                                    onchange="this.form.submit()">
                                                <option value="En attente" {% if reclamation.status == 'En attente' %}selected{% endif %}>
                                                    En attente
                                                </option>
                                                <option value="En cours" {% if reclamation.status == 'En cours' %}selected{% endif %}>
                                                    En cours
                                                </option>
                                                <option value="Résolue" {% if reclamation.status == 'Résolue' %}selected{% endif %}>
                                                    Résolue
                                                </option>
                                            </select>
                                        </form>
                                    </td>
                                    <td>
                                        {% if reclamation.sentimentLabel %}
                                            {% set sentiment_class = reclamation.sentimentLabel == 'positive' 
                                                ? 'sentiment-positive' 
                                                : (reclamation.sentimentLabel == 'negative' 
                                                    ? 'sentiment-negative' 
                                                    : 'sentiment-neutral') 
                                            %}
                                            <span class="sentiment-indicator {{ sentiment_class }}"></span>
                                            <span class="{{ reclamation.sentimentScore < 0.3 ? 'text-danger fw-bold' : '' }}">
                                                {{ reclamation.sentimentLabel|trans }} ({{ reclamation.sentimentScore|number_format(2) }})
                                            </span>
                                            {% if reclamation.sentimentScore < 0.3 %}
                                                <span class="badge bg-danger">À traiter en priorité</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="sentiment-indicator sentiment-unknown"></span>
                                            Non analysé
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_reclamation_reponses', {'id': reclamation.id}) }}" 
                                           class="btn btn-primary btn-sm">
                                            Gérer
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{# templates/reclamation/pdf_archive_list.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
    <style>
        body { font-family: Arial, sans-serif; }
        .header { text-align: center; margin-bottom: 20px; }
        .header h1 { color: #4e73df; }
        table { width: 100%; border-collapse: collapse; margin-bottom: 20px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #4e73df; color: white; }
        tr:nth-child(even) { background-color: #f2f2f2; }
        .footer { text-align: center; font-size: 12px; color: #666; margin-top: 20px; }
        .sentiment-positive { color: #28a745; }
        .sentiment-neutral { color: #ffc107; }
        .sentiment-negative { color: #dc3545; }
        .status-pending { color: #856404; background-color: #fff3cd; }
        .status-in-progress { color: #0c5460; background-color: #d1ecf1; }
        .status-resolved { color: #155724; background-color: #d4edda; }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{ title }}</h1>
        <p>Date d'extraction: {{ "now"|date("d/m/Y H:i") }}</p>
    </div>
    
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Description</th>
                <th>Utilisateur</th>
                <th>Date création</th>
                <th>Date suppression</th>
                <th>Statut</th>
                <th>Sentiment</th>
            </tr>
        </thead>
        <tbody>
            {% for archive in archives %}
                <tr>
                    <td>{{ archive.id }}</td>
                    <td>{{ archive.type }}</td>
                    <td>{{ archive.description|slice(0, 100) }}{% if archive.description|length > 100 %}...{% endif %}</td>
                    <td>{{ archive.utilisateurNom }}</td>
                    <td>{{ archive.date|date('d/m/Y H:i') }}</td>
                    <td>{{ archive.deletedAt|date('d/m/Y H:i') }}</td>
                    <td class="status-{{ archive.status|lower|replace({' ': '-'}) }}">
                        {{ archive.status }}
                    </td>
                    <td>
                        {% if archive.sentimentLabel %}
                            <span class="sentiment-{{ archive.sentimentLabel }}">
                                {{ archive.sentimentLabel|trans }} ({{ archive.sentimentScore|number_format(2) }})
                            </span>
                        {% else %}
                            Non analysé
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    <div class="footer">
        <p>Rapport généré par le système de gestion de réclamations</p>
    </div>
</body>
</html>
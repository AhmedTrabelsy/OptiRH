<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gestion de l'upload de fichier
            const fileInput = document.querySelector('.file-input');
            const fileSelectBtn = document.querySelector('.file-select-btn');
            const fileNameSpan = document.querySelector('.file-name');
            const modaliteSelect = document.getElementById('{{ form.modalite.vars.id }}'); // Meilleure façon de cibler
            const lieuInput = document.getElementById('{{ form.lieu.vars.id }}');

             // Fonction de gestion du changement
            function updateLieuField() {
                if (modaliteSelect.value === 'En ligne') {
                    lieuInput.value = 'En ligne';
                    lieuInput.readOnly = true;
                    lieuInput.classList.add('bg-light');
                } else {
                    lieuInput.readOnly = false;
                    lieuInput.classList.remove('bg-light');
                    if (lieuInput.value === 'En ligne') {
                        lieuInput.value = '';
                    }
                }
            }

fileSelectBtn.addEventListener('click', function () {
    fileInput.click();
});

fileInput.addEventListener('change', function () {
    if (this.files && this.files[0]) {
        fileNameSpan.textContent = this.files[0].name;
        fileNameSpan.style.color = '#28a745';
    } else {
        fileNameSpan.textContent = 'Aucun fichier sélectionné';
        fileNameSpan.style.color = '#6c757d';
    }
});
    // Écouteur d'événement
    modaliteSelect.addEventListener('change', updateLieuField);
    
    // Appliquer au chargement si nécessaire
    updateLieuField();
        

           

            
        });



        $(document).ready(function() {
    $('#generate-description-btn').on('click', function() {
        var titre = $('#evenement_titre').val();
        var lieu = $('#event_lieu').val(); // Tu avais déjà cet ID
        var type = $('#evenement_type').val();
        var modalite = $('#event_modalite').val(); // Tu avais déjà cet ID
        var descriptionField = $('#evenement_description'); // Cibler le champ de description

        if (!titre) {
            Swal.fire({
                icon: 'warning',
                title: 'Attention',
                text: 'Veuillez d\'abord saisir au moins le titre de l\'événement.',
            });
            return;
        }

        Swal.fire({
            title: 'Génération en cours...',
            text: 'L\'IA travaille sur une description pour vous.',
            allowOutsideClick: false,
            showConfirmButton: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        $.ajax({
            url: '{{ path('app_evenement_generer_description') }}',
            method: 'POST',
            data: {
                titre: titre,
                lieu: lieu,
                type: type,
                modalite: modalite,
            },
            dataType: 'json',
            success: function(response) {
                Swal.close();
                if (response.description) {
                    descriptionField.val(response.description);
                    Swal.fire({
                        icon: 'success',
                        title: 'Description générée !',
                        text: 'La description a été générée par l\'IA.',
                        timer: 2000,
                        showConfirmButton: false
                    });
                } else if (response.error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Erreur',
                        text: response.error,
                    });
                } else {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Avertissement',
                        text: 'La génération de la description a échoué.',
                    });
                }
            },
            error: function(xhr, status, error) {
                Swal.close();
                console.error("Erreur AJAX:", error);
                Swal.fire({
                    icon: 'error',
                    title: 'Erreur',
                    text: 'Une erreur s\'est produite lors de la communication avec le serveur.',
                });
            }
        });
    });
});
    </script>
    

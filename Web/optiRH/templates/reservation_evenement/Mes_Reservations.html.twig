{% extends 'partials/layout-horizontal.html.twig' %}

{% block title %}Mes Réservations{% endblock %}

{% block topbar %}
    {{ include('partials/topbar.html.twig', { page_title: 'Mes Réservations' }) }}
{% endblock %}
{% block css %}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/Evenement/frontevenement.css') }}">    
    <style>
        .table-responsive {
            overflow-x: auto;
        }
        .action-btn {
            padding: 0.25rem 0.6rem;
            font-size: 0.875rem;
        }
        .action-icons i {
            font-size: 1rem;
        }
        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }
    </style>
{% endblock %}


{% block body %}
<div class="container-fluid px-4">
    <div class="row mt-3">
        <div class="col-12">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        </div>
    </div>


    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0 text-gray-800">Mes Réservations</h1>
                <a href="{{ path('app_evenement_indexfront') }}" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-arrow-left me-1"></i> Retour aux événements
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th>Événement</th>
                                    <th>Date de début</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                               {% if reservations|length > 0 %}
                                    {% for reservation in reservations %}
                                        <tr>
                                            <td>
                                                <strong>{{ reservation.evenement.titre }}</strong><br>
                                                <small class="text-muted">{{ reservation.evenement.type }}</small>
                                            </td>
                                            <td>
                                                <strong> Du :{{ reservation.evenement.dateDebut|date('d/m/Y') }}</strong><br>
                                                <small class="text-muted">Jusqu'a :{{ reservation.evenement.dateFin|date('d/m/Y') }}</small>
                                            </td>
                                            <td class="text-center action-icons">
                                               
                                                <a href="{{ path('app_reservation_evenement_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-outline-warning action-btn me-1" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>

                                                
                                                <form method="post" action="{{ path('app_reservation_evenement_delete', {'id': reservation.id}) }}"
                                                    style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette réservation ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                                    <button class="btn btn-sm btn-outline-danger action-btn" title="Supprimer">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="3" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-calendar-times fa-2x mb-2"></i>
                                                <p class="mb-0">Aucune réservation trouvée</p>
                                            </div>
                                        </td>
                                    </tr>
                                {% endif %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

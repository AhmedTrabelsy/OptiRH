{{ form_start(form, {action: action is defined ? action : '',method: method is defined ? method : 'POST',attr: { class: 'event-booking-form', novalidate: 'novalidate' }}) }}
        <div class="booking-body">
            <div class="row">
                <div class="col-md-6">
                    {{ form_label(form.first_name, 'Nom', {'label_attr': {'class': 'form-label mt-2'}}) }}
                    <div class="form-group mb-4">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="mdi mdi-account-outline"></i>
                            </span>
                            {{ form_widget(form.first_name, {'attr': {'class': 'form-control','readonly': 'readonly'}}) }}
                        </div>
                        <div class="text-danger">
                            {{ form_errors(form.first_name) }}  
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    {{ form_label(form.last_name, 'Prénom', {'label_attr': {'class': 'form-label mt-2'}}) }}
                    <div class="form-group mb-4">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="mdi mdi-account-outline"></i>
                            </span>
                            
                            {{ form_widget(form.last_name, {'attr': {'class': 'form-control','placeholder': 'Prénom','autocomplete': 'given-name'}}) }}
                        </div>
                        <div class="text-danger">
                            {{ form_errors(form.last_name) }}
                        </div>    
                    </div>
                </div>
            </div>

            <div class="form-group mb-4">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label mt-2'}}) }}
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="mdi mdi-email-outline"></i>
                    </span>
                    {{ form_widget(form.email, {'attr': {'class': 'form-control','readonly': 'readonly'}}) }}
                </div>
                <div class="text-danger">
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="form-group mb-4">
                {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label mt-2'}}) }}
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="mdi mdi-phone-outline"></i>
                    </span>
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control','placeholder': 'Téléphone','autocomplete': 'tel'}}) }}
                </div>
                <div class="text-danger">
                    {{ form_errors(form.telephone) }}
                </div>
            </div>
        </div>

        <div class="booking-footer text-center mt-4">
            <button class="btn btn-primary btn-glow rounded-pill px-4 py-2" type="submit">
                <i class="mdi mdi-check-circle-outline me-2"></i>
                {{ button_label is defined ? button_label : 'Confirmer la réservation' }}
            </button>
        </div>
    
{{ form_end(form) }}

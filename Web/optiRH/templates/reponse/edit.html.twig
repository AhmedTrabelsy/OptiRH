{% extends 'partials/layout-vertical.html.twig' %}

{% block title %}Modifier réponse #{{ reponse.id }}{% endblock %}

{% block stylesheets %}
    <style>
        .edit-container {
            max-width: 800px;
            margin: 0 auto;
        }
        .card {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
        }
        .card-header {
            background-color: #4e73df;
            color: white;
        }
        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }
        .error-message {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: none;
        }
        .is-invalid {
            border-color: #dc3545;
        }
        .is-invalid ~ .error-message {
            display: block;
        }
    </style>
{% endblock %}
{% block topbar %}
    {{ include('partials/topbar.html.twig', { page_title: 'Réponse' }) }}
{% endblock %}
{% block body %}
    <div class="container edit-container py-5">
        <div class="card">
            <div class="card-header py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="m-0">Modifier la réponse #{{ reponse.id }}</h4>
                    <a href="{{ path('admin_reclamation_reponses', {'id': reponse.reclamation.id}) }}"
                       class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left mr-1"></i> Retour
                    </a>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {
                        'attr': {
                            'class': 'form-control ' ~ (form.description.vars.errors|length ? 'is-invalid' : ''),
                            'rows': 8
                        }
                    }) }}
                    <div class="error-message">
                        {{ form_errors(form.description) }}
                    </div>
                    <small class="form-text text-muted">Minimum 5 caractères requis</small>
                </div>
                <div class="text-right mt-4">
                    {{ form_widget(form.submit) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validation en temps réel
            const textarea = document.querySelector('textarea[minlength]');
            if (textarea) {
                textarea.addEventListener('input', function() {
                    const errorMessage = this.nextElementSibling;
                    if (this.value.length < 5) {
                        this.classList.add('is-invalid');
                        errorMessage.style.display = 'block';
                    } else {
                        this.classList.remove('is-invalid');
                        errorMessage.style.display = 'none';
                    }
                });
            }
        });
    </script>
{% endblock %}
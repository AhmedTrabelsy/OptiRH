{% extends 'partials/layout-vertical.html.twig' %}

{% block title %}Modifier réponse #{{ reponse.id }}{% endblock %}

{% block stylesheets %}
    <style>
        .edit-container {
            max-width: 800px;
            margin: 0 auto;
        }
        .card {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
        }
        .card-header {
            background-color: #4e73df;
            color: white;
        }
        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }
        .is-invalid {
            border-color: #dc3545;
        }
        .invalid-feedback {
            display: block;
            color: #dc3545;
            font-size: 0.875em;
        }
        .input-with-icon {
            position: relative;
        }
        .input-icon {
            position: absolute;
            left: 10px;
            top: 35px;
            color: #6c757d;
        }
        .textarea-icon {
            top: 15px;
        }
        .form-control {
            padding-left: 35px;
        }
    </style>
{% endblock %}

{% block topbar %}
    {{ include('partials/topbar.html.twig', { page_title: 'Réponse' }) }}
{% endblock %}

{% block body %}
    <div class="container edit-container py-5">
        <div class="card shadow {% if not form.vars.valid %}border-danger{% endif %}">
            <div class="card-header {% if not form.vars.valid %}bg-danger text-white{% else %}bg-primary text-white{% endif %} py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="m-0">
                        {% if not form.vars.valid %}
                            <i class="fas fa-exclamation-triangle me-2"></i>Veuillez corriger les erreurs
                        {% else %}
                            Modifier la réponse #{{ reponse.id }}
                        {% endif %}
                    </h4>
                    <a href="{{ path('admin_reclamation_reponses', {'id': reponse.reclamation.id}) }}"
                       class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left mr-1"></i> Retour
                    </a>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form, {
                    'attr': {
                        'id': 'edit-reponse-form',
                        'class': 'form-horizontal',
                        'novalidate': 'novalidate'
                    }
                }) }}
                
                <div class="mb-3 input-with-icon">
                    <i class="fas fa-align-left input-icon textarea-icon"></i>
                    {{ form_label(form.description, null, {
                        'label_attr': {'class': 'form-label'}
                    }) }}
                    {{ form_widget(form.description, {
                        'attr': {
                            'class': 'form-control' ~ (form.description.vars.errors|length ? ' is-invalid' : ''),
                            'rows': 8,
                            'placeholder': 'Modifiez votre réponse ici (5 caractères minimum)...',
                            'minlength': 5
                        }
                    }) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.description) }}
                    </div>
                    <small class="form-text text-muted">
                        <i class="fas fa-info-circle me-1"></i>Minimum 5 caractères requis
                    </small>
                </div>
                
                <div class="card-footer text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Enregistrer
                    </button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validation en temps réel
            const form = document.getElementById('edit-reponse-form');
            if (form) {
                // Validation à la soumission
                form.addEventListener('submit', function(e) {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
                
                // Validation en temps réel pour le textarea
                const textarea = document.querySelector('#edit-reponse-form textarea');
                if (textarea) {
                    textarea.addEventListener('input', function() {
                        if (this.value.length < 5) {
                            this.classList.add('is-invalid');
                        } else {
                            this.classList.remove('is-invalid');
                        }
                    });
                }
            }
        });
    </script>
{% endblock %}
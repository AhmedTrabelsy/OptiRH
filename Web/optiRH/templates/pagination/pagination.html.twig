{# templates/pagination/pagination.html.twig #}
{% if pageCount > 1 %}
    <nav>
        <ul class="pagination">
            {% if first is defined and current != first %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): first})) }}">
                        <span aria-hidden="true">&laquo;</span> Premier
                    </a>
                </li>
            {% endif %}

            {% if previous is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                        <span aria-hidden="true">&lsaquo;</span> Précédent
                    </a>
                </li>
            {% endif %}

            {% for page in pagesInRange %}
                <li class="page-item {% if page == current %}active{% endif %}">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                        {{ page }}
                    </a>
                </li>
            {% endfor %}

            {% if next is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                        Suivant <span aria-hidden="true">&rsaquo;</span>
                    </a>
                </li>
            {% endif %}

            {% if last is defined and current != last %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): last})) }}">
                        Dernier <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
{# templates/front/reclamation/list.html.twig #}
{% extends 'partials/layout-vertical.html.twig' %}

{% block topbar %}
    {{ include('partials/topbar.html.twig', { page_title: 'Liste des réclamations' }) }}
{% endblock %}
{% block title %}Mes réclamations{% endblock %}

{% block stylesheets %}
    <style>
        .status-pending { background-color: #fff3cd; color: #856404; }
        .status-in-progress { background-color: #d1ecf1; color: #0c5460; }
        .status-resolved { background-color: #d4edda; color: #155724; }
        
        .sentiment-indicator { display: inline-block; width: 10px; height: 10px; border-radius: 50%; margin-right: 5px; }
        .sentiment-positive { background-color: #28a745; }
        .sentiment-neutral { background-color: #ffc107; }
        .sentiment-negative { background-color: #dc3545; }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <h1 class="mt-4">Mes réclamations</h1>
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-table me-1"></i>
                Liste de mes réclamations
            </div>
            <div>
                <a href="{{ path('front_reclamations_pdf') }}" class="btn btn-sm btn-success">
                    <i class="fas fa-file-pdf"></i> Exporter en PDF
                </a>
                <a href="{{ path('front_add_reclamation') }}" class="btn btn-sm btn-primary">
                    <i class="fas fa-plus"></i> Nouvelle réclamation
                </a>
            </div>
        </div>
        
        <div class="card-body">
            <form method="get" class="mb-3">
                <div class="row">
                    <div class="col-md-5">
                        <input type="text" name="search" class="form-control" placeholder="Rechercher..." value="{{ searchTerm }}">
                    </div>
                    <div class="col-md-5">
                        <select name="type" class="form-control">
                            <option value="">Tous les types</option>
                            {% for typeValue, typeLabel in typeChoices %}
                                <option value="{{ typeValue }}" {% if selectedType == typeValue %}selected{% endif %}>{{ typeLabel }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">Filtrer</button>
                    </div>
                </div>
            </form>
            
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                         
                            <th>Type</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Statut</th>
                            <th>QR Code</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reclamation in reclamations %}
                            <tr>
                             
                                <td>{{ reclamation.type }}</td>
                                <td>{{ reclamation.description|slice(0, 50) }}{% if reclamation.description|length > 50 %}...{% endif %}</td>
                                <td>{{ reclamation.date|date('d/m/Y H:i') }}</td>
                                <td>
                                    <span class="badge status-{{ reclamation.status|lower|replace({' ': '-'}) }}">
                                        {{ reclamation.status }}
                                    </span>
                                </td>
                                <td>
                                    <a href="{{ path('front_reclamation_qr_code', {'id': reclamation.id}) }}" target="_blank" class="btn btn-sm btn-info">
                                        <i class="fas fa-qrcode"></i> Voir QR
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('front_reclamation_reponses', {'id': reclamation.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-comments"></i> Réponses
                                    </a>
                                    
                                    {% if reclamation.reponses.count == 0 %}
                                        <a href="{{ path('front_edit_reclamation', {'id': reclamation.id}) }}" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        
                                        <form method="post" action="{{ path('front_delete_reclamation', {'id': reclamation.id}) }}" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation?')">
                                                <i class="fas fa-trash"></i> Supprimer
                                            </button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">Aucune réclamation trouvée</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
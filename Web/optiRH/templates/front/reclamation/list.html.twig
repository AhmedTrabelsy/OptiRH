{# templates/front/reclamation/list.html.twig #} 
{% extends 'partials/layout-vertical.html.twig' %}

{% block topbar %}
    {{ include('partials/topbar.html.twig', { page_title: 'Mes Réclamations' }) }}
{% endblock %}

{% block title %}Mes Réclamations{% endblock %}

{% block stylesheets %}
    <style>
        .sentiment-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 5px;
        }
        .sentiment-positive {
            background-color: #28a745;
        }
        .sentiment-neutral {
            background-color: #ffc107;
        }
        .sentiment-negative {
            background-color: #dc3545;
        }
        .sentiment-unknown {
            background-color: #6c757d;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                     <div class="card-body">
                        <div class="mb-3">
                            <a href="{{ path('front_add_reclamation') }}" class="btn btn-primary">
                                <i class="mdi mdi-plus"></i> Ajouter une réclamation
                            </a>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-centered mb-0">
                                <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                    <th>Sentiment</th> {# Attention, ici Sentiment doit bien être la dernière colonne #}
                                </tr>
                                </thead>
                                <tbody>
                                {% for reclamation in reclamations %}
                                    <tr>
                                        <td>{{ reclamation.type }}</td>
                                        <td>{{ reclamation.description|slice(0, 50) }}{% if reclamation.description|length > 50 %}...{% endif %}</td>
                                        <td>{{ reclamation.date|date('d/m/Y H:i') }}</td>
                                        <td>
                                            <span class="badge bg-{{ reclamation.status == 'Résolue' ? 'success' : (reclamation.status == 'En cours' ? 'info' : 'warning') }}">
                                                {{ reclamation.status }}
                                            </span>
                                        </td>
                                        <td>
                                            <a href="{{ path('front_reclamation_reponses', {'id': reclamation.id}) }}"
                                               class="btn btn-sm btn-primary" title="Voir les réponses">
                                                <i class="mdi mdi-eye"></i>
                                            </a>
                                            
                                            {% if reclamation.reponses.count() == 0 %}
                                                <a href="{{ path('front_edit_reclamation', {'id': reclamation.id}) }}"
                                                   class="btn btn-sm btn-secondary" title="Modifier">
                                                    <i class="mdi mdi-pencil"></i>
                                                </a>
                                                <form method="post" action="{{ path('front_delete_reclamation', {'id': reclamation.id}) }}"
                                                    data-swal-confirm
                                                    style="display: inline-block;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                                    <button class="btn btn-sm btn-danger" title="Supprimer">
                                                        <i class="mdi mdi-delete"></i>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </td>
<td>
    {% if reclamation.sentimentLabel == 'error' %}
        <span class="badge bg-danger">
            <i class="fas fa-exclamation-triangle"></i> Erreur
        </span>
    {% else %}
        <span class="badge bg-{{ reclamation.sentimentLabel == 'positive' ? 'success' : 
                              (reclamation.sentimentLabel == 'negative' ? 'danger' : 'warning') }}"
              title="Score: {{ reclamation.sentimentScore|number_format(2) }}">
            {{ reclamation.sentimentLabel|trans|capitalize }}
            {% if reclamation.sentimentScore is not null %}
                ({{ reclamation.sentimentScore|number_format(2) }})
            {% endif %}
        </span>
    {% endif %}
</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center">Vous n'avez aucune réclamation</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="{{ asset('js recc/reclamation.js') }}"></script>
{% endblock %}

{# templates/front/reclamation/list.html.twig #}
{% extends 'partials/layout-vertical.html.twig' %}

{% block topbar %}
    {{ include('partials/topbar.html.twig', { page_title: 'Liste des réclamations' }) }}
{% endblock %}
{% block title %}Mes réclamations{% endblock %}

{% block stylesheets %}
    <style>
        .status-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 4px;
            font-weight: 600;
            font-size: 0.85rem;
            text-align: center;
            min-width: 100px;
        }
        
        .status-pending {
            background-color: #FFF3CD;
            color: #856404;
            border: 1px solid #FFEEBA;
        }
        
        .status-in-progress {
            background-color: #D1ECF1;
            color: #0C5460;
            border: 1px solid #BEE5EB;
        }
        
        .status-resolved {
            background-color: #D4EDDA;
            color: #155724;
            border: 1px solid #C3E6CB;
        }
        
        .sentiment-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 5px;
        }
        
        .sentiment-positive {
            background-color: #28a745;
        }
        
        .sentiment-neutral {
            background-color: #ffc107;
        }
        
        .sentiment-negative {
            background-color: #dc3545;
        }
        
        .sentiment-unknown {
            background-color: #6c757d;
        }
        
        .priority-badge {
            margin-left: 5px;
            font-size: 0.75rem;
        }
        
        .table-responsive {
            overflow-x: auto;
        }
        
        .action-buttons {
            white-space: nowrap;
        }
        
        .description-cell {
            max-width: 250px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        pagination {
            display: flex;
            justify-content: center;
            margin-top: 1rem;
        }
        
        .pagination span {
            margin: 0 0.25rem;
        }
        
        .pagination .current {
            font-weight: bold;
            color: #0d6efd;
        }
        
        .pagination a {
            color: #0d6efd;
            text-decoration: none;
            padding: 0.375rem 0.75rem;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
        }
        
        .pagination a:hover {
            background-color: #e9ecef;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <h1 class="mt-4">Mes réclamations</h1>
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-table me-1"></i>
                Liste de mes réclamations
            </div>
            <div>
                <a href="{{ path('front_reclamations_pdf') }}" class="btn btn-sm btn-success">
                    <i class="fas fa-file-pdf"></i> Exporter en PDF
                </a>
                <a href="{{ path('front_add_reclamation') }}" class="btn btn-sm btn-primary">
                    <i class="fas fa-plus"></i> Nouvelle réclamation
                </a>
            </div>
        </div>
        
        <div class="card-body">
            <form method="get" class="mb-4">
                <div class="row g-3">
                    <div class="col-md-5">
                        <input type="text" name="search" class="form-control" placeholder="Rechercher par description..." value="{{ searchTerm }}">
                    </div>
                    <div class="col-md-5">
                        <select name="type" class="form-control">
                            <option value="">Tous les types</option>
                            {% for typeValue, typeLabel in typeChoices %}
                                <option value="{{ typeValue }}" {% if selectedType == typeValue %}selected{% endif %}>{{ typeLabel }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-filter"></i> Filtrer
                        </button>
                    </div>
                </div>
            </form>
            
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Statut</th>
                            <th>Analyse sentiment</th>
                            <th>QR Code</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reclamation in pagination %}
                            <tr>
                                <td>{{ reclamation.type }}</td>
                                <td class="description-cell" title="{{ reclamation.description }}">
                                    {{ reclamation.description|slice(0, 50) }}
                                    {% if reclamation.description|length > 50 %}...{% endif %}
                                </td>
                                <td>{{ reclamation.date|date('d/m/Y H:i') }}</td>
                                <td>
                                    {% set statusClass = '' %}
                                    {% if reclamation.status == 'En attente' %}
                                        {% set statusClass = 'status-pending' %}
                                    {% elseif reclamation.status == 'En cours' %}
                                        {% set statusClass = 'status-in-progress' %}
                                    {% elseif reclamation.status == 'Résolue' %}
                                        {% set statusClass = 'status-resolved' %}
                                    {% endif %}
                                    
                                    <span class="status-badge {{ statusClass }}">
                                        {{ reclamation.status }}
                                    </span>
                                </td>
                                <td>
                                    {% if reclamation.sentimentLabel %}
                                        {% set sentiment_class = reclamation.sentimentLabel == 'positive' ? 'sentiment-positive' : 
                                            (reclamation.sentimentLabel == 'negative' ? 'sentiment-negative' : 'sentiment-neutral') %}
                                        <span class="sentiment-indicator {{ sentiment_class }}"></span>
                                        <span class="{{ reclamation.sentimentScore < 0.3 ? 'text-danger fw-bold' : '' }}">
                                            {{ reclamation.sentimentLabel|capitalize }} ({{ reclamation.sentimentScore|number_format(2) }})
                                        </span>
                                        {% if reclamation.sentimentScore < 0.3 %}
                                            <span class="badge bg-danger priority-badge">Priorité</span>
                                        {% endif %}
                                    {% else %}
                                        <span class="sentiment-indicator sentiment-unknown"></span>
                                        <span class="text-muted">Non analysé</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('front_reclamation_qr_code', {'id': reclamation.id}) }}" 
                                       target="_blank" 
                                       class="btn btn-info btn-sm"
                                       title="Voir le QR Code">
                                        <i class="fas fa-qrcode"></i>
                                    </a>
                                </td>
                                <td class="action-buttons">
                                    <a href="{{ path('front_reclamation_reponses', {'id': reclamation.id}) }}" 
                                       class="btn btn-primary btn-sm"
                                       title="Voir les réponses">
                                        <i class="fas fa-comments"></i>
                                    </a>
                                    
                                    {% if reclamation.reponses.count == 0 %}
                                        <a href="{{ path('front_edit_reclamation', {'id': reclamation.id}) }}" 
                                           class="btn btn-warning btn-sm"
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        
                                        <form method="post" 
                                              action="{{ path('front_delete_reclamation', {'id': reclamation.id}) }}" 
                                              style="display: inline-block;"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <div class="text-muted">
                                        <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                        Aucune réclamation trouvée
                                    </div>
                                    <a href="{{ path('front_add_reclamation') }}" class="btn btn-primary mt-2">
                                        <i class="fas fa-plus"></i> Créer une réclamation
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                                    <div class="d-flex justify-content-center mt-3">
    {{ knp_pagination_render(pagination) }}
</div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
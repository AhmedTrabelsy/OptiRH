{# templates/front/reclamation/add.html.twig #}
{% extends 'partials/layout-horizontal.html.twig' %}


{% block title %}Ajouter une Réclamation{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h4 class="page-title">Ajouter une Réclamation</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {
                                'attr': {
                                    'class': 'form-control' ~ (form.description.vars.errors|length ? ' is-invalid' : ''),
                                    'rows': 5,
                                    'minlength': 5
                                }
                            }) }}
                            {% if form.description.vars.errors|length %}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.description) }}
                                </div>
                            {% endif %}
                            <small class="form-text text-muted">Minimum 5 caractères</small>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.status) }}
                            {{ form_widget(form.status, {
                                'attr': {
                                    'class': 'form-select'
                                }
                            }) }}
                        </div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="mdi mdi-content-save"></i> Enregistrer
                            </button>
                            <a href="{{ path('front_reclamations') }}" class="btn btn-secondary">
                                <i class="mdi mdi-arrow-left"></i> Annuler
                            </a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
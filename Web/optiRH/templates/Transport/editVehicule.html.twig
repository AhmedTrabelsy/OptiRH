{% extends 'partials/layout-vertical.html.twig' %}

{% block title %}Modifier Véhicule{% endblock %}

{% block topbar %}
    {{ include('partials/topbar.html.twig', { page_title: 'Modifier Véhicule' }) }}
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Modifier Véhicule #{{ vehicule.id }}</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(form.type, {
                                'attr': {'class': 'form-select'},
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.disponibilite, {
                                'attr': {'class': 'form-select'},
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.nbrplace, {
                                'attr': {
                                    'class': 'form-control',
                                    'min': 1
                                },
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                    </div>

                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="mdi mdi-content-save"></i> Mettre à jour
                        </button>
                        <a href="{{ path('app_transport_trajet_vehicules', {'id': vehicule.trajet.id}) }}" class="btn btn-secondary">
                            Annuler
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Confirmation avant soumission
    const form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            Swal.fire({
                title: 'Confirmer la modification',
                text: 'Êtes-vous sûr de vouloir modifier ce véhicule ?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Oui, enregistrer',
                cancelButtonText: 'Annuler'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    }
});
</script>
{% endblock %}

{% endblock %}
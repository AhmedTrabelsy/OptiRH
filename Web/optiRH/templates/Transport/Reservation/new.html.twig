{% extends 'base.html.twig' %}

{% block title %}Confirmer la réservation{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Confirmer la réservation</h4>
                
                <div class="alert alert-info mb-4">
                    <h5 class="mb-1">{{ vehicule.type }}</h5>
                    <p class="mb-1">{{ vehicule.trajet.depart }} → {{ vehicule.trajet.arrive }}</p>
                    <p class="mb-0">Places disponibles: {{ vehicule.nbrplace }}</p>
                </div>

                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.date) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.passengers) }}
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="mdi mdi-check-circle-outline me-1"></i> Confirmer
                        </button>
                        <a href="{{ path('app_transport_reservation_index') }}" class="btn btn-light">
                            Annuler
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}